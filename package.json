{
  "name": "deploy-changed-functions",
  "version": "0.0.1",
  "description": "Deploy only Cloud Functions which have changed",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write **/*.ts",
    "test": "jest --config jest.config.js",
    "test:cov": "npm run test -- --coverage"
  },
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^3.0.0",
    "@actions/io": "^1.0.2",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.10.1",
    "@types/jest": "^26.0.0",
    "@types/lodash": "^4.14.155",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.3.0",
    "@typescript-eslint/parser": "^3.3.0",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsdoc": "^27.0.7",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "prettier": "^2.0.5",
    "ts-jest": "^26.1.0",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  },
  "keywords": [
    "functions",
    "firebase-tools"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/prescottprue/deploy-changed-functions.git"
  },
  "bugs": {
    "url": "https://github.com/prescottprue/deploy-changed-functions/issues"
  },
  "author": {
    "name": "Prescott Prue",
    "url": "https://github.com/prescottprue"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run build && git add ."
    }
  }
}
